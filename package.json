{
  "name": "aconser-fichajes",
  "private": true,
  "version": "1.0.0",
  "description": "Plataforma de fichaje y gesti√≥n de horas para Aconser",
  "license": "MIT",
  "scripts": {
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "npm --prefix apps/backend run build",
    "build:frontend": "npm --prefix apps/frontend run build",
    "dev": "npm-run-all -p dev:backend dev:frontend",
    "dev:backend": "npm --prefix apps/backend run start:dev",
    "dev:frontend": "npm --prefix apps/frontend run dev",
    "lint": "npm-run-all lint:backend lint:frontend",
    "lint:backend": "npm --prefix apps/backend run lint",
    "lint:frontend": "npm --prefix apps/frontend run lint",
    "format": "npm-run-all format:backend format:frontend",
    "format:backend": "npm --prefix apps/backend run format",
    "format:frontend": "npm --prefix apps/frontend run format",
    "test": "npm-run-all test:backend test:frontend",
    "test:backend": "npm --prefix apps/backend run test",
    "test:frontend": "npm --prefix apps/frontend run test",
    "test:e2e": "npm --prefix apps/backend run test:e2e",
    "db:migrate": "npx prisma migrate deploy",
    "db:generate": "npx prisma generate",
    "db:seed": "npx ts-node --compiler-options '{\"module\":\"commonjs\"}' prisma/seed.ts",
    "prepare": "husky install"
  },
  "workspaces": [
    "apps/backend",
    "apps/frontend"
  ],
  "devDependencies": {
    "husky": "^9.0.0",
    "lint-staged": "^15.2.2",
    "npm-run-all": "^4.1.5"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,md,css,scss}": [
      "prettier --write"
    ],
    "apps/backend/src/**/*.ts": [
      "cd apps/backend && npm run lint -- --fix"
    ],
    "apps/frontend/src/**/*.{ts,tsx}": [
      "cd apps/frontend && npm run lint -- --fix"
    ]
  }
}
