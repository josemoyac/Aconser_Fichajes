# Base
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:5173
BACKEND_URL=http://localhost:3000
DATABASE_URL=postgresql://aconser:aconser@postgres:5432/aconser?schema=public

# Auth
OIDC_PROVIDER=mock
OIDC_ISSUER_URL=https://login.microsoftonline.com/<tenant>/v2.0
OIDC_CLIENT_ID=changeme
OIDC_CLIENT_SECRET=changeme
OIDC_REDIRECT_URI=http://localhost:3000/auth/callback
OIDC_SCOPES=openid profile email offline_access
SESSION_SECRET=supersecret
COOKIE_DOMAIN=localhost

# Integrations
A3_BASE_URL=http://a3-mock:4000
A3_API_KEY=mock-api-key
A3_WEBHOOK_SECRET=a3-webhook-secret
BC_BASE_URL=http://bc-mock:4100
BC_TENANT_ID=mock-tenant
